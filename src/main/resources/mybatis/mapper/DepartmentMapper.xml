<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.DepartmentMapper">
    <select id="queryDepartmentsList" resultType="Department">
        select id,departmentName from department order by id desc
    </select>

    <select id="queryDepartmentById" resultType="Department">
        select id,departmentName from department where id = #{id}
    </select>
</mapper>